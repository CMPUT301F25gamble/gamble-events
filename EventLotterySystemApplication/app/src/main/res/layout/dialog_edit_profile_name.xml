<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_edit_name_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/dialog_edit_name_header_text"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dialog_edit_name_editfield"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dialog_edit_name_header" />

    <Button
        android:id="@+id/dialog_edit_name_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_text"
        app:layout_constraintTop_toBottomOf="@+id/dialog_edit_name_editfield"
        tools:layout_editor_absoluteX="177dp" />

    <Button
        android:id="@+id/dialog_edit_name_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/cancel_text"
        app:layout_constraintEnd_toStartOf="@+id/dialog_edit_name_confirm_button"
        app:layout_constraintTop_toBottomOf="@+id/dialog_edit_name_editfield" />

</androidx.constraintlayout.widget.ConstraintLayout>