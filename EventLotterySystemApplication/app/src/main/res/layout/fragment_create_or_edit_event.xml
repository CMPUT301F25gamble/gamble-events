        <!-- For formatting -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <ImageButton
            android:id="@+id/createOrEditEventBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:contentDescription="@string/back_button_text"
            android:src="@drawable/back_icon"
            android:background="@drawable/round_button"
             />

        <TextView
            android:id="@+id/createOrEditEventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/create_or_edit_event_text"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- Event Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/createOrEditEventEventNameAsterisk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="@string/important"
                android:textColor="@color/important_field"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/createOrEditEventEventNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_detail_screen_name_text"
