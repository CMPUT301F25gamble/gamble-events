<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.EventDetailScreenFragment">

    <ProgressBar
        android:id="@+id/loading_event_detail_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Group referencing all content to HIDE while loading the DB info  -->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/content_group_events_detail_screen"
        android:visibility="gone"
        app:constraint_referenced_ids="
            eventNameText,
            eventImage,
            eventDetailTagText,
            tagsHorizontalRv,
            infoContainer,
            eventDetailsTitle,
            eventDetailsDescScrollView,
            generateQRCodeButton,
            navigationBarButton"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <!-- ADMIN Group referencing all content to HIDE while loading the DB info -->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/content_group_admin_events_detail_screen"
        android:visibility="gone"
        app:constraint_referenced_ids="
            adminButtonContainer"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <!-- CHOSEN ENTRANT Group referencing all content to HIDE while loading the DB info -->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/content_group_chosen_entrant"
        android:visibility="gone"
        app:constraint_referenced_ids="
            ChosenEntrantButtonContainer"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <!-- CHOSEN ENTRANT Group referencing all content to HIDE while loading the DB info -->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/content_group_cancelled_or_finalized"
        android:visibility="gone"
        app:constraint_referenced_ids="
            cancelledOrFinalizedText"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <ImageButton
        android:id="@+id/eventDetailScreenBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:contentDescription="@string/back_button_text"
        android:src="@drawable/back_icon"
        android:background="@drawable/round_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eventNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_list_item"
        android:padding="8dp"
        tools:text="@string/event_detail_screen_name_text"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventDetailScreenBackButton" />

    <ImageView
        android:id="@+id/eventImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/event_detail_image_text"
        android:background="@drawable/rounded_list_item"
        android:clipToOutline="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventNameText"
        tools:targetApi="31" />

    <LinearLayout
        android:id="@+id/infoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_list_item"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/eventImage">

        <!-- Location Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: "
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/eventLocationText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="temp location name"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Event Period Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Period: "
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/eventPeriodText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="temp datetime"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Registration Period Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration Period: "
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/eventRegPeriodText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="temp datetime"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Invitation Acceptance Deadline Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept Invitation by: "
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/eventInvitationDLText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="temp deadline"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Waitlist Capacity Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrants in Waitlist: "
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/waitlistText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="temp waitlist capacity"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Chosen Capacity Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Capacity: "
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/chosenCapText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="temp event capacity"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/eventDetailTagText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:text="@string/event_tags_text"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/infoContainer"
        tools:layout_editor_absoluteX="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tagsHorizontalRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventDetailTagText" />

    <TextView
        android:id="@+id/eventDetailsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/event_details_title_text"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tagsHorizontalRv"
        tools:layout_editor_absoluteX="32dp" />

    <ScrollView
        android:id="@+id/eventDetailsDescScrollView"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:overScrollMode="always"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/eventDetailsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/eventDetailsDescText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/lorem_ipsum_numbered"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:padding="4dp"/>
    </ScrollView>

    <Button
        android:id="@+id/generateQRCodeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/grey"
        android:text="@string/generate_qr_code_text"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/navigationBarButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/cancelledOrFinalizedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Sample text"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_list_item_v2"
        android:backgroundTint="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/navigationBarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:text="@string/join_waitlist_text"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Buttons for Accepting/Declining event (chosen Entrant) -->
    <LinearLayout
        android:id="@+id/ChosenEntrantButtonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/ChosenEntrantEventLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/acceptChosenEntrantButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/green"
                android:text="ACCEPT"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/declineChosenEntrantButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/red"
                android:text="DECLINE"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <!-- Buttons for Admin control -->
    <LinearLayout
        android:id="@+id/adminButtonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/removeEventLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/removeEventButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/red"
                android:text="Remove Event"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/removeImageButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/red"
                android:text="Remove Image"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/removeOrganizerButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:backgroundTint="@color/red"
                android:text="Remove Organizer"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
