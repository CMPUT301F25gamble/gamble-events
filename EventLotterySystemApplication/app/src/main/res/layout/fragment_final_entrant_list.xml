<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.FinalEntrantListFragment">

    <ProgressBar
        android:id="@+id/loading_final_entrants_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Group referencing all content to HIDE while loading the DB info  -->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/content_group_final_entrants_list"
        android:visibility="gone"
        app:constraint_referenced_ids="
            finalEntrantListBackButton,
            finalListOfEntrantsText,
            finalListOfEntrantsListView,
            printListButton"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <ImageButton
        android:id="@+id/finalEntrantListBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:contentDescription="@string/back_button_text"
        android:src="@drawable/back_icon"
        android:background="@drawable/round_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/finalListOfEntrantsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/final_list_of_entrants_text"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/finalEntrantListBackButton"
        tools:layout_editor_absoluteX="16dp" />

    <ListView
        android:id="@+id/finalListOfEntrantsListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_list_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finalListOfEntrantsText" />

    <Button
        android:id="@+id/printListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/app_beige"
        android:layout_marginTop="16dp"
        android:text="@string/print_list_text"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finalListOfEntrantsListView" />

</androidx.constraintlayout.widget.ConstraintLayout>