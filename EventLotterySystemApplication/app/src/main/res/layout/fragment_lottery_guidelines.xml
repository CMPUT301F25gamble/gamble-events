<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title (includes red asterisk & Lottery Guideline title) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/asterisk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/important"
                android:textColor="@color/important_field"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/lotteryGuidelineTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lottery_guideline_title"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Scrollable text box -->
        <TextView
            android:id="@+id/scrollableText"
            android:layout_width="match_parent"
            android:layout_height="475dp"
            android:background="@drawable/rounded_list_item"
            android:padding="24dp"
            android:scrollbars="vertical"
            android:text="@string/lorem_ipsum_numbered"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />

        <!-- Cancel & Confirm Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:text="@string/cancel"
                android:textStyle="bold"
                android:backgroundTint="@color/red"
                android:textColor="@color/black"
                android:layout_marginEnd="30dp" />

            <Button
                android:id="@+id/confirmButton"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:text="@string/confirm"
                android:textStyle="bold"
                android:backgroundTint="@color/green"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
